.row.mb-5
  .col-8.offset-2
    .mt-3.my-5
      .row
        .col-1
          = avatar(:medium, @article.author)
        .col-6
          %h4= @article.author.name
          %p= @article.created_at.strftime("%B %d, %Y")
        - if current_user == @article.author
          .col-5.text-end
            = link_to "Редагувати статтю", edit_article_path(@article), class: "btn btn-primary"

    %h2= @article.title
    %p= @article.content
    - @article.tags.each do |tag|
      %h4.d-inline
        %span.badge.bg-secondary.rounded-pill= tag.name
